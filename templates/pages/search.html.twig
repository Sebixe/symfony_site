{% extends 'layouts/main.html.twig' %}

{% block content %}
    <div class="container">
        <div class="about-us-content">
            <div class="gallery-search">
                <div class="row">
                    <div class="col-md-12 col-sm-6">
                        <div class="single-package-item white-package">
                            <div>
                                <img src="{{ asset('assets/images/packages/search.jpg') }}" alt="package-place">
                            </div>

                                <div class="single-package-item-txt min-content-height">

                                    </br>

                                <div class ="col-md-8 col-sm-8">
                                    <div class = "single-package-item white-package">
                                        <img src="{{ asset('assets/images/packages/Quest_Final_Fantasy_XIV.webp') }}" alt="package-place">
                                        <div class="single-package-item-txt">
                                            <h3> Résultats</h3>
                                            <div class="row">
                                                {% for content in contents %}
                                                    <p>
                                                        {{ content.level }}.
                                                        <a href="{{ content.adresse }}"  class="eorzeadb_link" target="_blank" rel="noopener noreferrer">
                                                            {{ content.title }}
                                                        </a>

                                                        <a href="{{ content.position }}"  class="disapear float-right eorzeadb_link" target="_blank" rel="noopener noreferrer">
                                                            Quête d'accès
                                                        </a>
                                                    </p>
                                                {% else %}
                                                    <h3>Sorry, rien trouvé</h3>
                                                {% endfor %}

                                            </div>
                                    </div>
                                </div>
                                </div>
                                    <div class ="col-md-4 col-sm-4">
                                        <div class = "single-package-item white-package min-search">
                                            <div class="single-package-item-txt">
                                                <div class="row">

                                                 <div class="top-margin-2">
                                                     {{ form_start(searchCompleteForm) }}
                                                     {{ form_label(searchCompleteForm.extensions, ' Extension ') }}
                                                     {{ form_widget(searchCompleteForm.extensions, {attr: {'type':'select','class':'select top-margin-2','option':'-- Choisir une extension --'}})}}
                                                     {{ form_label(searchCompleteForm.types, ' Type ') }}
                                                     {{ form_widget(searchCompleteForm.types, {attr: {'type':'select','class':'select top-margin-2','option':'-- Choisir une extension --'}})}}
                                                     {{ form_label(searchCompleteForm.keyword, 'Recherche') }}
                                                     {{ form_widget(searchCompleteForm.keyword, {attr: {'type':'text','class':'select float-left','placeholder':'Recherche....'}})}}
                                                     {{ form_widget(searchCompleteForm.submit, {attr: {'class':'btn-link fa fa-search search float-right' ,'label':'false'}})}}
                                                     {{ form_end(searchCompleteForm) }}
                                                    </div>
                                                </div>
                                        </div>
                                    </div>
                                    </div>
                                </div>

                            </div><!--/.single-package-item-txt-->
                        </div><!--/.col-->
                    </div><!--/.row-->
                </div>
            </div>
        </div><!--/.container-->
    </div><!--/.packages-->
        </section><!--/.packages-->

{% endblock content %}
